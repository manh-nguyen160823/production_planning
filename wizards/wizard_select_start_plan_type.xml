<?xml version="1.0"?>
<odoo>

    <record id="wizard_select_start_plan_order_form_view" model="ir.ui.view">
        <field name="name">wizard_select_start_plan_order_form_view</field>
        <field name="model">wizard.select.start.plan.order</field>
        <field name="arch" type="xml">
            <form string="Schedule Planning">
                <group>
                    <field name="plan_id" readonly="1"/>
                    <field name="start_plan_type" widget="radio"/>
                    <field name="plan_type" widget="radio"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_start_plan" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>